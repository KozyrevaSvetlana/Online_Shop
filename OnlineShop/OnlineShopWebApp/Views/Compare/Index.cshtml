@model IEnumerable<Product>

<div class="text-center">
    <h1 class="display-4"></h1>
    @if (Model == null)
    {
        <div class="card-body">
            <p>Извините, товаров для сравнения нет</p>
        </div>
    }
    else
    {
        @foreach (var product in Model)
        {
            <div class="col-3 card shadow">
                <img class="card-img-top" href="@product.Image" src="@product.Image" alt="@product.Name" />
                <div class="card-body">
                    <p>@product.Id</p>
                    <a href="/Product/Index/@product.Id">@product.Name</a>
                    <p>@product.Cost руб</p>
                    <a class="btn btn-success" href="/cart/add?id=@product.Id" role="button">Добавить в корзину</a>
                </div>
            </div>
        }
    }
    <a class="btn btn-info" asp-controller="Home" asp-action="Index" role="button">Вернуться на главную страницу</a>
</div>