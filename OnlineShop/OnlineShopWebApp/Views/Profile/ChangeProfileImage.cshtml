<div class="row">
    <div class="col-2">
        @await Html.PartialAsync("ProfileLeftMenu")
    </div>
    <div class="col-10">
        <div class="row">
            <div class="col">
                <div class="list-group d-flex align-items-center py-5">
                    <h4>Добавить фото</h4>
                    <form method="post" class="form-group py-3" enctype="multipart/form-data">
                        <div class="validatoin badge badge-danger" asp-validation-summary="ModelOnly"></div>
                        <div>
                            <label>Добавить изображение</label>
                            <input type="file" name="File" class="form-control"/>
                            <span>
                                <button type="submit" class="btn btn-primary" asp-area="" asp-controller="Profile" asp-action="ChangeProfileImage">Добавить</button>
                                <a class="btn btn-danger" asp-area="" asp-controller="Profile" asp-action="DeleteImage">Удалить фото</a>
                            </span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>