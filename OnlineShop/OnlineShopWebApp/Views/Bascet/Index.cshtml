@model List<Basket.BasketList>
@{
    ViewData["Title"] = "Home Page";
}


<h1 class="display-4">Корзина</h1>
<table>
    <tr>
        <th>Номер</th>
        <th>Название</th>
        <th>Количество</th>
        <th>Стоимость</th>
        <th>Итого</th>
    </tr>
    @{ int i = 1;}
    @foreach (var product in Model)
    {
<tr>
    <th>@i</th>
    <th>@product.Product.Name</th>
    <th>@product.Count</th>
    <th>@product.Product.Cost</th>
    <th>@{decimal result = product.Product.Cost * product.Count;}</th>
    @{i++;}
</tr>
        }


</table>

