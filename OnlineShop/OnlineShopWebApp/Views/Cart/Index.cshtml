@model Cart

@if (Model == null)
{
    <div>
        <p>Упс, корзина пуста</p>
        <a class="btn btn-info" asp-controller="Home" asp-action="Index" role="button">Продолжить покупки</a>
    </div>
}
else
{
    <h1 class="display-4">Корзина</h1>
    <div class="row">
        <div class="col">
            <table class="table">
                <tr>
                    <th>Номер</th>
                    <th>Название</th>
                    <th>Количество</th>
                    <th>Стоимость</th>
                    <th>Итого</th>
                </tr>
                @{ int i = 1;}
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <th>@i</th>
                        <th>@item.Product.Name</th>
                        <th>@item.Product.Cost</th>
                        <th>@item.Amount</th>
                        <th>@item.Cost</th>
                        @{i++;}
                    </tr>
                }
            </table>
            <div class="text-right">
                <h3>Итого:</h3>
                <h3>@Model.Cost</h3>
            </div>
            <a class="btn btn-info" asp-controller="Home" asp-action="Index" role="button">Продолжить покупки</a>
            <a class="btn btn-success" href="#" role="button">Оформить заказ</a>
        </div>
    </div>
}



