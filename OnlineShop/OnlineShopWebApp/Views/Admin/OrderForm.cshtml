@model Order

<div class="container">
    <h1>Заказ №@Model.Number</h1>
    <form method="post" class="form-group">
        <div>
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th scope="col">Дата и время оформления</th>
                        <th scope="col">@Model.InfoStatus.Data.ToShortDateString() @Model.InfoStatus.Data.ToLongTimeString()</th>
                    </tr>
                    <tr>
                        <th scope="col">Получатель</th>
                        <th scope="col">@Model.User.Surname @Model.User.Name</th>
                    </tr>
                    <tr>
                        <th scope="col">Телефон</th>
                        <th scope="col">@Model.User.Phone</th>
                    </tr>
                    <tr>
                        <th scope="col">Email</th>
                        <th scope="col">@Model.User.Email</th>
                    </tr>
                    <tr>
                        <th scope="col">Сумма заказа</th>
                        <th scope="col">@Model.Cost</th>
                    </tr>
                    <tr>
                        <th scope="col">Комментарий</th>
                        <th scope="col">@Model.Comment</th>
                    </tr>
                    <tr>
                        <th scope="col">Статус заказа</th>
                        <th scope="col">
                            <select name="status" value="">
                                <option name="status" value="Создан">Создан</option>
                                <option name="status" value="В работе">В работе</option>
                                <option name="status" value="В пути">В пути</option>
                                <option name="status" value="Готов к выдаче">Готов к выдаче</option>
                                <option name="status" value="Выполнен">Выполнен</option>
                            </select>
                        </th>
                    </tr>
                    <tr>
                        <th scope="col">Действие</th>
                        <th scope="col">
                            <input type="hidden" name="number" value="@Model.Number" />
                            <button class="btn btn-success" type="submit" asp-controller="Admin" asp-action="EditOrder" tabindex="7">Изменить</button>
                            <button class="btn btn-danger" type="submit" asp-controller="Admin" asp-action="DeleteOrder" name="number" value="@Model.Number"tabindex="8">Удалить</button>
                        </th>
                    </tr>
                </tbody>
            </table>
            </div>
    </form>
</div>
