@model Product

<div class="container">
    <h1>Добавление нового продукта</h1>
    <form method="post" class="form-group">
        <br />
        <div class="validatoin badge badge-danger" asp-validation-summary="ModelOnly"></div>
        <br />
        <div>
            <label asp-for="Name">Название</label>
            <input asp-for="Name" type="text" class="form-control" name="Name" tabindex="1">
            <span class="badge badge-danger" asp-validation-for="Name"></span>
        </div>
        <div>
            <label asp-for="Cost">Цена</label>
            <input asp-for="Cost" type="number" class="form-control" name="Cost" tabindex="2" value="" min="1">
            <span class="badge badge-danger" asp-validation-for="Cost"></span>
        </div>
        <div>
            <label asp-for="Description">Описание</label>
            <textarea asp-for="Description" class="form-control" type="text" name="Description" cols="30" rows="10" tabindex="3" value=""></textarea>
            <span class="badge badge-danger" asp-validation-for="Description"></span>
        </div>
        <div>
            <label>Подкатегория</label>
            <select name="idCategoryItem" value="Категории">
                @foreach (Category category in ViewBag.Categories)
                {
                    foreach (Subcategory subcategory in category.Subcategory)
                    {
                        <option name="idCategoryItem" value="@subcategory.Id">@category.Name: @subcategory.Name</option>
                    }
                }
            </select>
        </div>
        <br />
        <div>
            <input type="hidden" name="Image" value="/img/Products/empty.gif" />
            <span>
                <button type="submit" class="btn btn-primary" asp-controller="Admin" asp-action="AddNewProduct" tabindex="5">Добавить</button>
                <a class="btn btn-danger" href="/Admin/Index" tabindex="6">Отменить</a>
            </span>
        </div>
    </form>
</div>
