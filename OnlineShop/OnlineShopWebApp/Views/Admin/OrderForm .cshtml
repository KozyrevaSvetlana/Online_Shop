@model Order

<div class="container">
    <h1>Заказ №@Model.Number</h1>
    <form method="post" class="form-group">
        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Дата и время оформления</th>
                        <th scope="col">Адрес доставки</th>
                        <th scope="col">Получатель</th>
                        <th scope="col">Телефон</th>
                        <th scope="col">Email</th>
                        <th scope="col">Сумма заказа</th>
                        <th scope="col">Комментарий</th>
                        <th scope="col">Статус заказа</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>@Model.InfoStatus.Data.ToShortDateString() @Model.InfoStatus.Data.ToLongTimeString()</td>
                    </tr>
                    <tr>
                        <th scope="row">2</th>
                        <td>Jacob</td>
                    </tr>
                    <tr>
                        <th scope="row">3</th>
                        <td>Larry</td>
                    </tr>
                </tbody>
            </table>
            </div>
    </form>
</div>
