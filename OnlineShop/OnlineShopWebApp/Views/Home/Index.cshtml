@model IndexViewModel

<div class="container px-4 overflow-hidden">
    <div class="d-grid">
        <h1 class="display-4">Все товары</h1>
    </div>



    <div class="row row-cols-4 row-cols-md-4 g-4">
        @foreach (var product in Model.Products)
        {
            <div class="col">
                <div class="card">
                    <img src="@product.Image" class="card-img-top" alt="@product.Name" />
                    <div class="card-body">
                        <div class="d-flex justify-content-center">
                        <h5 class="card-title"><a asp-area="" asp-controller="Product" asp-action="Index" asp-route-id="@product.Id">@product.Name</a></h5>
                        </div>
                        <p class="card-text">
                            @(product.Description.Substring(0, 100))...
                        </p>
                    </div>
                    <div class="d-flex justify-content-center">
                        <form method="post">
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <button type="submit" class="btn btn-dark" asp-area="" asp-controller="Cart" asp-action="Add" asp-route-id="@product.Id">
                                    <i class="fa-solid fa-cart-shopping"></i>
                                </button>
                                <a type="button" class="btn btn-primary" asp-area="" asp-controller="Favorites" asp-action="Add" asp-route-id="@product.Id">
                                    <i class="fas fa-heart"></i>
                                </a>
                                <a type="button" class="btn btn-info" asp-area="" asp-controller="Compare" asp-action="Add" asp-route-id="@product.Id">
                                    <i class="fa-solid fa-code-compare"></i>
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="d-flex">
        <div class="row gx-4 gx-5 g-2 p-2">
            @foreach (var product in Model.Products)
            {
                <div class="card p-3" style="width: 18rem;">
                    <div class="card-body">
                        <img class="card-img-top rounded" href="@product.Image" src="@product.Image" alt="@product.Name" />
                        <h5 class="card-title">
                            <a asp-area="" asp-controller="Product" asp-action="Index" asp-route-id="@product.Id">@product.Name</a>
                        </h5>
                        <p class="card-text">
                            @(product.Description.Substring(0, 100))...
                        </p>
                        <form method="post">
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <button type="submit" class="btn btn-dark" asp-area="" asp-controller="Cart" asp-action="Add" asp-route-id="@product.Id">
                                    <i class="fa-solid fa-cart-shopping"></i>
                                </button>
                                <a type="button" class="btn btn-primary" asp-area="" asp-controller="Favorites" asp-action="Add" asp-route-id="@product.Id">
                                    <i class="fas fa-heart"></i>
                                </a>
                                <a type="button" class="btn btn-info" asp-area="" asp-controller="Compare" asp-action="Add" asp-route-id="@product.Id">
                                    <i class="fa-solid fa-code-compare"></i>
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            }
        </div>
        <div class="d-grid">
            <div class="p-2">
                <ul class="pagination">
                    @for (int i = 1; i < Model.PageInfo.TotalPages; i++)
                    {
                        <li class="@(i == Model.PageInfo.PageNumber ? "page-item active" : "page-item")">
                            <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

