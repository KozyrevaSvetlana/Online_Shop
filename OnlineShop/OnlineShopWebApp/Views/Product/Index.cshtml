@model ProductViewModel

<div class="text-center py-5">
    <h1 class="display-4"></h1>
    @if (Model == null)
    {
        <div class="card-body">
            <p>Извините, товар не найден</p>
        </div>
    }
    else
    {
        @if (Model.Images.Count > 0)
        {
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="@Model.Images[0]" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="@Model.Images[1]" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="@Model.Images[2]" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <div class="row">
                @*<div class="col-6"><img class="card-img-top" href="@Model.Image" src="@Model.Image" alt="@Model.Name" /></div> *@
                <div class="row">
                    <div class="text-left">
                        <h2>@Model.Name</h2>
                        <p class="font-weight-light">@Model.Cost  ₽</p>
                        <p class="font-italic">@Model.Description</p>
                    </div>
                </div>
                <div class="text-left">
                    <div class="btn-group-vertical" role="group" aria-label="Basic example">
                        <a type="button" class="btn btn-dark" asp-area="" asp-controller="Cart" asp-action="Add" asp-route-id="@Model.Id">В корзину</a>
                        <a type="button" class="btn btn-primary" asp-area="" asp-controller="Favorites" asp-action="Add" asp-route-id="@Model.Id">В избранное</a>
                        <a type="button" class="btn btn-info" asp-area="" asp-controller="Compare" asp-action="Add" asp-route-id="@Model.Id">Сравнить</a>
                    </div>
                </div>
            </div>
        }
    }
</div>
<div class="py-1">
    <a class="btn btn-secondary" asp-area="" asp-controller="Home" asp-action="Index" role="button">Продолжить покупки</a>
</div>
