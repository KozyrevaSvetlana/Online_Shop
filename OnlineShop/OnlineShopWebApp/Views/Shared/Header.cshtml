<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container px-5">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link active" aria-current="page" asp-area="" asp-controller="Cart" asp-action="Index">Корзина @await Component.InvokeAsync("CartCount")</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Favorites" asp-action="Index">Избранное @await Component.InvokeAsync("Favorites")</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Compare" asp-action="Index">Сравнить @await Component.InvokeAsync("Compare")</a></li>
                    <li class="nav-item"><a class="nav-link" href="#!">Доставка</a></li>

                    @if (User.Identity.IsAuthenticated)
                    {
                <li class="nav-item">
                    <p>
                        <a href="/Profile/Index">
                            <img class="rounded-circle" src="@await Component.InvokeAsync("Image")" width="35"
                                 height="35" alt="Изображение">
                        </a>
                    </p>
                </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Login" asp-action="Logout">Выйти</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Login" asp-action="Index">Войти</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Login" asp-action="RegIndex">Зарегистрироваться</a>
                        </li>
                    }
                    @if (User.IsInRole(Constants.AdminRoleName))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">Панель администратора</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <form class="d-flex" method="post">
                <input class="form-control me-2" type="search" placeholder="Поиск" aria-label="Поиск" name="result">
                <button class="btn btn-secondary" type="submit" asp-controller="Product" asp-action="Find">Поиск</button>
            </form>
        </div>
    </nav>
</header>