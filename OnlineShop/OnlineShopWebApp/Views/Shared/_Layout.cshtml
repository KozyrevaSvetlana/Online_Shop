<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta keywords="интернет-магазин десткий товаров, детские товары, игрушки, одежда для мальчиков, одежда для девочек, конструкторы, все для детей">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] Интернет-магазин дестких товаров</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="icon" href="~/img/iconBear.jpg" type="image/x-icon" />
</head>
<body>
    <header>
        <nav>
            <a href="/Home/Index"><img src="/img/bearIcon.png" alt="Плюшевый мишка"></a>
            <a asp-controller="Home" asp-action="Index">Доставка</a>
            <a asp-controller="Home" asp-action="Index">Войти</a>
            <a asp-controller="Cart" asp-action="Index">Корзина</a>
            @if (ViewBag.AllAmountAtCart != 0)
            {
                <span>@ViewBag.AllAmountAtCart</span>
            }
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <p>2021 - Интернет-магазин детcких товаров</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
