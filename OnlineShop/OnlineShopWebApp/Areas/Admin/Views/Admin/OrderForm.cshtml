@model Order

<div class="row">
    <div class="col-2">
        @await Html.PartialAsync("AdminLeftMenu")
    </div>
    <div class="col-10">

        <div class="row">
            <div class="col">
                <div class="list-group d-flex align-items-center py-5">
                    <h4>Заказ №@Model.Number</h4>
                    <form method="post" class="form-group">
                        <div>
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <th scope="col">Дата и время оформления</th>
                                        <th scope="col">@Model.InfoStatus.Data.ToShortDateString() @Model.InfoStatus.Data.ToLongTimeString()</th>
                                    </tr>
                                    <tr>
                                        <th scope="col">Получатель</th>
                                        <th scope="col">@Model.User.Surname @Model.User.Name</th>
                                    </tr>
                                    <tr>
                                        <th scope="col">Телефон</th>
                                        <th scope="col">@Model.User.Phone</th>
                                    </tr>
                                    <tr>
                                        <th scope="col">Email</th>
                                        <th scope="col">@Model.User.Email</th>
                                    </tr>
                                    <tr>
                                        <th scope="col">Сумма заказа</th>
                                        <th scope="col">@Model.Cost</th>
                                    </tr>
                                    <tr>
                                        <th scope="col">Комментарий</th>
                                        <th scope="col">@Model.Comment</th>
                                    </tr>
                                    <tr>
                                        <th scope="col">Статус заказа</th>
                                        <th scope="col">
                                            <select name="status" value="">
                                                @foreach (var status in ViewData["Statuses"] as List<string>)
                                                {
                                                    if (status == Model.InfoStatus.GetStatus(Model.InfoStatus.StatusOrder))
                                                    {
                                                        <option selected name="status" value="@status">@status</option>
                                                    }
                                                    else
                                                    {
                                                        <option name="status" value="@status">@status</option>
                                                    }
                                                }
                                            </select>
                                        </th>
                                    </tr>
                                    <tr>
                                        <th scope="col">Действие</th>
                                        <th scope="col">
                                            <input type="hidden" name="number" value="@Model.Number" />
                                            <button class="btn btn-success" type="submit" asp-area="Admin" asp-controller="Admin" asp-action="EditOrder" tabindex="7">Изменить</button>
                                            <button class="btn btn-danger" type="submit" asp-area="Admin" asp-controller="Admin" asp-action="DeleteOrder" name="number" value="@Model.Number" tabindex="8">Удалить</button>
                                        </th>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
