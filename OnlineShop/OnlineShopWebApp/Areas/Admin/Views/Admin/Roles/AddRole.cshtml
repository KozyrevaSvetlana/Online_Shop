@model RoleViewModel

<div class="row">
    <div class="col-2">
        @await Html.PartialAsync("AdminLeftMenu")
    </div>
    <div class="col-10">

        <div class="row">
            <div class="col">
                <div class="list-group d-flex align-items-center py-5">
                    <h4>Добавление новой роли</h4>
                    <form method="post" class="form-group">
                        <br />
                        <div class="validatoin badge badge-danger" asp-validation-summary="ModelOnly"></div>
                        <br />
                        <div>
                            <label asp-for="Name">Название</label>
                            <input asp-for="Name" type="text" class="form-control" name="Name" tabindex="1">
                            <span class="badge badge-danger" asp-validation-for="Name"></span>
                        </div>
                        <br />
                        <div>
                            <span>
                                <button type="submit" class="btn btn-primary" asp-area="Admin" asp-controller="Roles" asp-action="AddNewRole" tabindex="2">Добавить</button>
                                <a class="btn btn-danger" asp-area="Admin" asp-controller="Home" asp-action="Index" tabindex="6">Отменить</a>
                            </span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
