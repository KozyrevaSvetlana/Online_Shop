@model ProductViewModel

<div class="row">
    <div class="col-2">
        @await Html.PartialAsync("AdminLeftMenu")
    </div>
    <div class="col-10">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="list-group d-flex align-items-center py-5">
                        <h4>Редактирование</h4>
                        <div class="validatoin badge badge-danger" asp-validation-summary="ModelOnly"></div>
                        <form method="post" class="form-group" enctype="multipart/form-data">
                            <div>
                                <label>Id</label>
                                <input type="text" class="form-control" name="id" value="@Model.Id" readonly>
                            </div>
                            <div>
                                <label asp-for="Name">Имя</label>
                                <input asp-for="Name" type="text" class="form-control" name="Name" tabindex="1" value="@Model.Name">
                                <span class="badge badge-danger" asp-validation-for="Name"></span>
                            </div>
                            <div>
                                <label >Старая цена</label>
                                <input type="text" class="form-control" name="oldCost" value="@Model.Cost" readonly>
                            </div>
                            <div>
                                <label asp-for="Cost">Цена</label>
                                <input asp-for="Cost" type="number" class="form-control" name="Cost" tabindex="2" value="@Model.Cost" min="1">
                                <span class="badge badge-danger" asp-validation-for="Cost"></span>
                            </div>
                            <div>
                                <label asp-for="Description">Описание</label>
                                <textarea asp-for="Description" class="form-control" type="text" name="Description" cols="30" rows="10" tabindex="3" value="">@Model.Description</textarea>
                                <span class="badge badge-danger" asp-validation-for="Description"></span>
                            </div>
                            <div>
                                <label asp-for="Image">Изображение</label>
                                <label>Изображения</label><br />
                                @foreach (var imagePath in Model.Images)
                                {
                                    <div style="padding:4px">
                                        <img src="@imagePath" width="150" height="150" />
                                    </div>
                                }
                            </div>
                            <div>
                                <label asp-for="Description">Добавить изображения</label>
                                <input type="file" name="UploadedFile" class="form-control" multiple/>
                                <input type="hidden" name="Id" value="@Model.Id" />
                                <input type="hidden" name="Images" value="@Model.Image" />
                                <span>
                                    <button type="submit" class="btn btn-primary" asp-area="Admin" asp-controller="Products" asp-action="EditProduct" tabindex="5">Изменить</button>
                                    <a class="btn btn-danger" asp-area="Admin" asp-controller="Home" asp-action="Index" tabindex="6">Отменить</a>
                                </span>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
